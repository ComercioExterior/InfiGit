<?xml version="1.0" encoding="ISO-8859-1"?>
<record>
    
    <!--
    
    NOTA:
    
    1) valores validos para el atributo 'type': 
       varchar, decimal, integer, date
    
    2) el atributo 'size' solo importa para campos
       del tipo varchar se ignora para otro tipo de dato
       pero DEBE estar definido aunque tenga un valor 0 (cero)
       y representa la longitud maxima del campo.
    
    -->
    
        <field 
        name="msc_user_id" 
        type="integer" 
        description="Primary Key"
        nullable="1"
        size="50" />
        
        <field 
        name="userid" 
        type="varchar" 
        description="Identificador (User ID)"
        nullable="0"
        size="25" />
        
        <field 
        name="email" 
        type="varchar" 
        description="E-Mail"
        nullable="1"
        size="50" />
        
	    <field
	    name="fullname"
	    type="varchar" 
	    description="Nombre del Usuario"
	    nullable="0"
	    size="50" />
	    
	   <field
	    name="last_name"
	    type="varchar" 
	    description="Apellido del Usuario"
	    nullable="0"
	    size="50" />
	    
		<field
	    name="ci"
	    type="varchar" 
	    description="C&eacute;dula de Identidad del Usuario"
	    nullable="1"
	    size="12" />

       <field 
        name="password_date" 
        type="date" 
        description="password_date"
        nullable="1"
        size="10" />
        
        <field 
        name="msc_role_id" 
        type="integer" 
        description="msc_role_id"
        nullable="0"
        size="10" />
                

 		<regexp 
 			mask="\w{6,}" 
 			field="password" 
 			on-error-msg="La contraseña debe tener al menos 6 caracteres (sin espacios, solo letras y/o n&uacute;meros)." />

    
</record>

