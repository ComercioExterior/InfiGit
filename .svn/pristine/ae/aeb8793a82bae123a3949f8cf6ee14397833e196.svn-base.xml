<?xml version="1.0" encoding="ISO-8859-1"?>
<record>
    
    <!--
    
    NOTA:
    
    1) valores validos para el atributo 'type': 
       varchar, decimal, integer, date
    
    2) el atributo 'size' solo importa para campos
       del tipo varchar se ignora para otro tipo de dato
       pero DEBE estar definido aunque tenga un valor 0 (cero)
       y representa la longitud maxima del campo.
    
    -->
    
    <field 
        name="id_tipper" 
        type="varchar" 
        description="Identificador del Tipo de Persona"
        nullable="1"
        size="1" />
        
        <field 
        name="id_blotter" 
        type="varchar" 
        description="Identificador del Blotter"
        nullable="1"
        size="25" />
        
        <field 
        name="blotter" 
        type="varchar" 
        description="Nombre del Blotter"
        nullable="0"
        size="200" />
        
        <field 
        name="unidad" 
        type="varchar" 
        description="Nombre de la Unidad de Inversion"
        nullable="0"
        size="100" />
        
        <field 
        name="persona" 
        type="varchar" 
        description="Tipo de Persona"
        nullable="0"
        size="25" />
</record>

